<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User's information</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container py-4 m-auto">
        <form action="/put-crud" method="POST">
            <div class="form-row">
                <div class="col-12 mb-3 font-weight-bold">Update User's Information</div>
                <input type="text" name="id" value="<%=userData.id%>" hidden />
                <div class="form-group col-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" value="<%=userData.email%>" name="email" readonly>
                </div>
                <div class="form-group col-6">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" value="<%=userData.password%>" readonly>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    <label for="inputEmail4">First Name</label>
                    <input type="text" class="form-control" value="<%=userData.firstName%>" name="firstName">
                </div>
                <div class="form-group col-6">
                    <label for="inputPassword4">Last Name</label>
                    <input type="text" class="form-control" value="<%=userData.lastName%>" name="lastName">
                </div>
            </div>

            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" value="<%=userData.address%>" name="address">
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>

</html>